<%= link_to new_package_path, :class => "btn btn-inverse pull-right" do  %>
  <i class="icon-plus icon-white"></i>
<% end %>

<table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Licence type</th>
        <th>Width</th>
        <th>Height</th>
        <th>Price</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody id="packages">
        <% @packages.each do |package| %>
          <tr>
            <td><%= package.name %></td>
            <td><%= package.licence_type %></td>
            <td><%= package.width %></td>
            <td><%= package.height %></td>
            <td><%= package.price %></td>
            <td>
              <div class="btn-group" style="float:right">
                <%= link_to package, :class => 'btn' do %>
                  <i class="icon-info-sign"></i>
                <% end %>
                <%= link_to edit_package_path(package), :class => 'btn' do %>
                  <i class="icon-pencil"></i>
                <% end %>

                <%= link_to package_path(package), :confirm => "Are you sure?", :method => :delete, :class => 'btn' do %>
                  <i class="icon-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
    </tbody>
</table>

<br />

<%= link_to 'New Package', new_package_path %>
