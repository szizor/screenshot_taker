<%= link_to new_tag_path, :class => "btn btn-inverse pull-right" do  %>
  <i class="icon-plus icon-white"></i>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody id="tags" data-update-url="<%#= sort_admin_tags_url %>" data-enabler-url="<%#= enabler_admin_tags_url %>">
    <% @tags.each do |tag| %>
      <%= content_tag_for :tr, tag do %>
        <td><%= tag.id %></td>
        <td><%= tag.name %></td>
        <td>
          <div class="btn-group" style="float:right">
            <%= link_to edit_tag_path(tag), :class => 'btn' do %>
              <i class="icon-pencil"></i>
            <% end %>

            <%= link_to tag_path(tag), :confirm => "Are you sure?", :method => :delete, :class => 'btn' do %>
              <i class="icon-trash"></i>
            <% end %>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
