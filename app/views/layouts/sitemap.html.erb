  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Productshots</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
          <![endif]-->

          <!-- Le styles -->
          <%= stylesheet_link_tag 'bootstrap.css'%>
          <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
          <%= javascript_include_tag "jquery.min" %>
          <%= javascript_include_tag "jquery-ui.min" %>
          <%= javascript_include_tag "jquery_ujs" %>

          <%= javascript_include_tag 'bootstrap.js' %>
          <%= csrf_meta_tags %>
          <style type="text/css">
          body {
            padding-top: 60px;
          }

        /* Sticky footer styles
        -------------------------------------------------- */

        html,
        body {
          height: 100%;
          /* The html and body elements cannot have any padding or margin. */
        }

        /* Wrapper for page content to push down footer */
        #wrap {
          min-height: 100%;
          height: auto !important;
          height: 100%;
          /* Negative indent footer by it's height
          margin: 0 auto -60px;*/
        }

        #footer {
          background-color: #f5f5f5;
        }

        /* Lastly, apply responsive CSS fixes as necessary */
        @media (max-width: 767px) {
          #footer {
            margin-left: -20px;
            margin-right: -20px;
            padding-left: 20px;
            padding-right: 20px;
          }
        }



        /* Custom page CSS
        -------------------------------------------------- */
        /* Not required for template or sticky footer method. */

        .container {
          width: auto;
          max-width: 680px;
        }
        .container .credit {
          margin: 20px 0;
        }

        </style>
      </head>

      <body>
        <%- flash.each do |name, msg| -%>
        <div class="flash_wrapper">
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <span class="flash_close">&times;</span>
        </div>
        <%- end -%>
        <div id="wrap">
          <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
              <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </a>

                <div class="nav-collapse collapse">
                  <ul class="nav pull-right">

                  </ul>
                </div><!--/.nav-collapse -->
              </div>
            </div>
          </div>

          <div class="container">

            <%= yield %>
            <div id="push"></div>
          </div>
        </div> <!-- /container -->
        <div id="footer">
          <div class="by">
            <img class="placeit" alt="Place it by" src="/images/ui/place-it-by.png">
            <a class="logo" title="Responsive Web Design App for Designers" href="http://breezi.com/">
              <img alt="Responsive Web Design App for Designers" src="/images/ui/breezi-logo.png">
            </a>
          </div>
        </div>
      </body>
      </html>
